      "method": "POST",
      "path": "/",
      "headers": {
        "X-User-Id": "test_user_123"
      },
      "body": {
        "amount": 1000
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "orderId": "string",
        "amount": 1000
      },
